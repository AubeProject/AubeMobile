<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDEDED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_dialog_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_client_title"
            android:textColor="#2B2B2B"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clients_label_name"
            android:textColor="#2B2B2B"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#2B2B2B"
            android:textColorHint="#9E9E9E"
            android:inputType="textCapWords"
            android:autofillHints="name"
            android:hint="@string/clients_hint_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clients_label_document"
            android:textColor="#2B2B2B"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etDocument"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#2B2B2B"
            android:textColorHint="#9E9E9E"
            android:inputType="text"
            android:autofillHints="taxNumber"
            android:hint="@string/clients_hint_document"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clients_label_address"
            android:textColor="#2B2B2B"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#2B2B2B"
            android:textColorHint="#9E9E9E"
            android:inputType="textPostalAddress"
            android:autofillHints="postalAddress"
            android:hint="@string/clients_hint_address"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clients_label_responsible"
            android:textColor="#2B2B2B"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etResponsible"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#2B2B2B"
            android:textColorHint="#9E9E9E"
            android:inputType="textPersonName"
            android:autofillHints="name"
            android:hint="@string/clients_hint_responsible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clients_label_phone"
            android:textColor="#2B2B2B"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#2B2B2B"
            android:textColorHint="#9E9E9E"
            android:inputType="phone"
            android:autofillHints="phone"
            android:hint="@string/clients_hint_phone"/>

    </LinearLayout>
</ScrollView>
