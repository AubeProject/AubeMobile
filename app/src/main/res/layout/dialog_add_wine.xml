<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDEDED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_dialog_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_image_label"
            android:textColor="#2B2B2B"
            android:textStyle="bold"/>

        <!-- Área clicável para selecionar a imagem -->
        <FrameLayout
            android:id="@+id/pickImageArea"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_upload_area"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="@null"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_upload"
                    android:contentDescription="@string/content_desc_upload_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_image_hint"
                    android:textColor="#8A8A8A"
                    android:gravity="center"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_name_label"
            android:textColor="#2B2B2B"
            android:textStyle="bold"
            android:layout_marginTop="14dp"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#2B2B2B"
            android:textColorHint="#9E9E9E"
            android:inputType="textCapWords"
            android:hint="@string/dialog_name_hint"
            android:autofillHints="name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_type_label"
                    android:textColor="#2B2B2B"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spType"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_dialog_field" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_year_label"
                    android:textColor="#2B2B2B"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/etYear"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_dialog_field"
                    android:inputType="number"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="#2B2B2B"
                    android:textColorHint="#9E9E9E"
                    android:hint="@string/dialog_year_hint"
                    android:autofillHints="year"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_price_label"
            android:textColor="#2B2B2B"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_dialog_field"
            android:inputType="numberDecimal"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#2B2B2B"
            android:textColorHint="#9E9E9E"
            android:hint="@string/dialog_price_hint"
            android:autofillHints="price"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_notes_label"
            android:textColor="#2B2B2B"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_dialog_field"
            android:gravity="top|start"
            android:padding="14dp"
            android:textColor="#2B2B2B"
            android:textColorHint="#9E9E9E"
            android:hint="@string/dialog_notes_hint"
            android:inputType="textMultiLine"
            android:autofillHints="notes"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_pairing_label"
            android:textColor="#2B2B2B"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etPairing"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_dialog_field"
            android:gravity="top|start"
            android:padding="14dp"
            android:textColor="#2B2B2B"
            android:textColorHint="#9E9E9E"
            android:hint="@string/dialog_pairing_hint"
            android:inputType="textMultiLine"
            android:autofillHints="pairing"/>

    </LinearLayout>
</ScrollView>
