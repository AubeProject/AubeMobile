<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#0B0B0B">

    <!-- Top: avatar + title -->
    <LinearLayout
        android:id="@+id/topRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Circular avatar (simple TextView) -->
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/avatar_icon"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F57C00"
            android:background="@android:drawable/btn_default_small"
            android:padding="4dp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:text="@string/dashboard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:text="@string/dashboard_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BDBDBD"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Period selector (Semana / Mês / Ano) -->
    <LinearLayout
        android:id="@+id/periodSelector"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/topRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvSemana"
            android:text="@string/period_week"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#BDBDBD" />

        <TextView
            android:id="@+id/tvMes"
            android:text="@string/period_month"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:background="#1F1F1F"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvAno"
            android:text="@string/period_year"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#BDBDBD" />

    </LinearLayout>

    <!-- Stats grid -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/periodSelector"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1: Total Vendido (left) and Clientes Visitados (right) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="#121212">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iconTotal"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_currency_dollar"
                            app:tint="#F57C00"
                            android:contentDescription="@string/total_vendido"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvTotalLabel"
                            android:text="@string/total_vendido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#BDBDBD"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTotalValue"
                            android:text="@string/valor_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:id="@+id/tvTotalDelta"
                            android:text="@string/delta_mes_anterior"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#B0B0B0"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="#121212">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iconClientes"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_people_fill"
                            app:tint="#F57C00"
                            android:contentDescription="@string/clientes_visitados"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:text="@string/clientes_visitados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#BDBDBD"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/valor_clientes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:text="@string/clientes_semana"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#49C46A"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 2: Pedidos Fechados (left) and Comissões (right) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="#121212">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iconPedidos"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_basket_fill"
                            app:tint="#F57C00"
                            android:contentDescription="@string/pedidos_fechados"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:text="@string/pedidos_fechados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#BDBDBD"
                            android:textSize="14sp" />

                        <TextView
                            android:text="@string/valor_pedidos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:text="@string/pendentes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#F57C00"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="#121212">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iconComissoes"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_filter_circle"
                            app:tint="#F57C00"
                            android:contentDescription="@string/comissoes"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:text="@string/comissoes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#BDBDBD"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/valor_comissoes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:text="@string/percent_comissoes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#BDBDBD"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Chart card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#121212">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="@string/vendas_ultimos_meses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <!-- Placeholder for chart -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="12dp"
                        android:background="#2E2E2E" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#121212"
        app:itemIconTint="@null"
        app:itemTextColor="@android:color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
