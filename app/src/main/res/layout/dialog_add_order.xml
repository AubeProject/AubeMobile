<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_order_title"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:textSize="17sp"
            android:paddingBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_client"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:paddingBottom="4dp"/>
        <Spinner
            android:id="@+id/spClient"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_dialog_field"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_products"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"/>

        <LinearLayout
            android:id="@+id/containerProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/btnAddProductRow"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/label_add_product"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:background="#EFEFEF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_payment_method"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"/>
        <Spinner
            android:id="@+id/spPayment"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_dialog_field"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_status"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"/>
        <Spinner
            android:id="@+id/spStatus"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_dialog_field"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btnCancelOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_cancel"/>
            <Button
                android:id="@+id/btnCreateOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_order_button"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
