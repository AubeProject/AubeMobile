<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvClientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/tvClientDocument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvClientAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvClientResponsible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvClientPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:dividerPadding="8dp"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/btnEditClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_client_title"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnDeleteClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_delete"
            android:layout_marginStart="12dp"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
