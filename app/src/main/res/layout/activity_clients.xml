<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top bar with icon and title -->
    <LinearLayout
        android:id="@+id/topBarClients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person"
            app:tint="@color/bege"
            android:contentDescription="@null"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">
            <TextView
                android:id="@+id/tvClientsHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clients_header_title"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvClientsHeaderSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clients_header_subtitle"
                android:textColor="@color/red"
                android:textSize="12sp"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_dashboard"
            app:tint="@color/bege"
            android:contentDescription="@null"/>
    </LinearLayout>

    <!-- Search bar -->
    <EditText
        android:id="@+id/etSearchClients"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:hint="@string/clients_search_hint"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/blue"
        android:background="@drawable/edit_text_bg"
        android:inputType="text"
        android:autofillHints="search"
        app:layout_constraintTop_toBottomOf="@id/topBarClients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Clients list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvClients"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/etSearchClients"
        app:layout_constraintBottom_toTopOf="@id/bottomNavClients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Add floating button -->
    <ImageButton
        android:id="@+id/btnAddClient"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/blue"
        android:background="@drawable/edit_text_bg"
        android:src="@drawable/ic_add"
        app:tint="@color/blue"
        android:contentDescription="@string/add_client_button_desc"
        app:layout_constraintBottom_toTopOf="@id/bottomNavClients"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom carousel -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bottomNavClients"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
